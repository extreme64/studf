<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mlipattern"  xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@color/color_btnText1_pressed"
android:padding="4dp" >

<ImageView
    android:id="@+id/ivIcoS"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:padding="5dp"
    android:src="@drawable/ic_action_favbook_dblue"
    android:layout_alignParentLeft="true"
    />

    <LinearLayout
        android:id="@+id/TextSekcija"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentRight="false"
        android:layout_marginStart="48dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tvNaziv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tekst layout"
            android:textColor="@color/color_ListaText1"
            android:textSize="15dip" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/TextSekcija2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_marginStart="48dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tvInto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="0dip"
            android:paddingTop="0dip"
            android:textColor="@color/color_GlavnaPozadinaSvetlije2"
            android:textSize="11dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvInfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="0dip"
            android:paddingTop="0dip"
            android:textColor="@color/color_GlavnaPozadinaSvetlije2"
            android:textSize="11dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvInfo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="40dp"
            android:paddingStart="0dip"
            android:paddingTop="0dip"
            android:textColor="@color/color_GlavnaPozadinaSvetlije2"
            android:textSize="11dip"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>