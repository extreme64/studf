<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="horizontal|vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="5dp">

        <ImageView
            android:id="@+id/item_ico"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:padding="20dp"
            android:src="@drawable/ic_action_detview" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxHeight="45dp"
                android:paddingStart="13dp"
                android:text="rtert45645654"
                android:textIsSelectable="true"
                android:textSize="12dp" />

            <ImageButton
                android:id="@+id/go_www"
                android:layout_width="30dp"
                android:layout_height="33dp"
                android:layout_column="1"
                android:layout_marginEnd="2dp"
                android:maxHeight="35dp"
                android:maxWidth="35dp"
                android:onClick="item_goto_url"
                android:src="@drawable/ic_action_planet_www" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/ListView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="200px"
        android:orientation="vertical"
        android:paddingBottom="48dp">

        <TextView
            android:id="@+id/item_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:paddingStart="80dp"
            android:paddingTop="10dp"
            android:scrollIndicators="right|start|end"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarSize="9dp"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            android:soundEffectsEnabled="true"
            android:text="Opis neki item-a staticki tekst ////"
            android:textAlignment="textStart"
            android:textSize="10dp"></TextView>


        <TextView
            android:id="@+id/item_detail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:paddingStart="85dp"
            android:paddingTop="10dp"
            android:scrollbars="vertical"
            android:text="333.33.2222"
            android:textAlignment="textStart"
            android:textSize="9dp"
            android:visibility="visible"></TextView>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/app_icon_size"
        android:layout_gravity="bottom"
        android:layout_marginTop="-48dp"
        android:theme="@style/AlertDialog.AppCompat">

        <ImageButton
            android:id="@+id/onClk_addFav"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_column="1"
            android:layout_marginEnd="2dp"
            android:onClick="onClk_addFav_dtlFrag"
            android:src="@drawable/ic_action_favit" />

        <ImageButton
            android:id="@+id/onClk_removeFav"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_column="2"
            android:layout_marginEnd="2dp"
            android:onClick="onClk_removeFav_dtlFrag"
            android:src="@drawable/ic_action_unfavit" />


    </GridLayout>

</LinearLayout>

